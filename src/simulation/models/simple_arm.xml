<mujoco model="simple_arm">
  <!-- Compiler settings -->
  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
  
  <!-- Simulation options -->
  <option timestep="0.002" iterations="50" solver="Newton" tolerance="1e-10"/>
  
  <!-- Default settings -->
  <default>
    <joint limited="true" damping="0.5" armature="0.1"/>
    <geom contype="1" conaffinity="1" condim="3" friction="1 0.1 0.1"/>
  </default>
  
  <!-- Assets (textures, materials) -->
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>
    <texture name="texplane" type="2d" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.15 0.2" width="512" height="512" mark="cross" markrgb="1 1 1"/>
    <material name="matplane" reflectance="0.3" texture="texplane" texrepeat="1 1" texuniform="true"/>
  </asset>
  
  <!-- World body -->
  <worldbody>
    <!-- Ground plane -->
    <geom name="floor" pos="0 0 0" size="0 0 0.05" type="plane" material="matplane"/>
    
    <!-- Lighting -->
    <light directional="true" diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2" pos="0 0 5" dir="0 0 -1"/>
    <light directional="true" diffuse="0.4 0.4 0.4" specular="0.1 0.1 0.1" pos="0 0 4" dir="0 1 -1"/>
    
    <!-- Base (fixed at origin, representing waist attachment) -->
    <body name="base" pos="0 0 1.0">
      <geom name="base_geom" type="cylinder" size="0.05 0.05" rgba="0.3 0.3 0.3 1"/>
      
      <!-- Upper arm (first segment) -->
      <body name="upper_arm" pos="0 0 0.05">
        <joint name="shoulder_flex" type="hinge" axis="0 1 0" range="-3.14 3.14"/>
        <geom name="upper_arm_geom" type="capsule" size="0.03" fromto="0 0 0 0 0 0.3" rgba="0.7 0.3 0.3 1"/>
        
        <!-- Forearm (second segment) -->
        <body name="forearm" pos="0 0 0.3">
          <joint name="elbow_flex" type="hinge" axis="0 1 0" range="-2.5 2.5"/>
          <geom name="forearm_geom" type="capsule" size="0.025" fromto="0 0 0 0 0 0.25" rgba="0.3 0.7 0.3 1"/>
          
          <!-- End-effector (simple sphere for now) -->
          <body name="end_effector" pos="0 0 0.25">
            <geom name="ee_geom" type="sphere" size="0.03" rgba="0.3 0.3 0.7 1"/>
            <!-- TODO: Add gripper here -->
          </body>
        </body>
      </body>
    </body>
    
    <!-- Optional: Target sphere for visualization (non-physical) -->
    <body name="target" pos="0.3 0 1.2">
      <geom name="target_geom" type="sphere" size="0.04" rgba="1 0 0 0.3" contype="0" conaffinity="0"/>
    </body>
  </worldbody>
  
  <!-- Actuators (motors for each joint) -->
  <actuator>
    <motor name="shoulder_motor" joint="shoulder_flex" gear="100" ctrllimited="true" ctrlrange="-1 1"/>
    <motor name="elbow_motor" joint="elbow_flex" gear="100" ctrllimited="true" ctrlrange="-1 1"/>
  </actuator>
  
  <!-- Sensors -->
  <sensor>
    <!-- Joint positions -->
    <jointpos name="shoulder_pos" joint="shoulder_flex"/>
    <jointpos name="elbow_pos" joint="elbow_flex"/>
    
    <!-- Joint velocities -->
    <jointvel name="shoulder_vel" joint="shoulder_flex"/>
    <jointvel name="elbow_vel" joint="elbow_flex"/>
    
    <!-- End-effector position -->
    <framepos name="ee_pos" objtype="body" objname="end_effector"/>
  </sensor>
</mujoco>

